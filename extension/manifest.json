{
  "manifest_version": 3,
  "name": "TimeSync - Sync Your Time-Table",
  "version": "1.0.0",
  "description": "Extract your SNU ERP timetable and sync classes to Google Calendar.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "action": {
    "default_title": "TimeSync - Sync Your Time-Table",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],

  "host_permissions": [
    "https://prodweb.snu.in/*",
    "https://www.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://prodweb.snu.in/*"],
      "js": ["content-scripts/timetable_extractor.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "utils/parser.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
